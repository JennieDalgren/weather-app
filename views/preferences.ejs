    <input cf-label="&#x1F610" type="radio" name="clouds" value="0" id="clouds-dontcare">

  </fieldset>


  <fieldset cf-questions="Do you like snow?">

    <input cf-label="&#x1F44D" type="radio" name="snow" value="1" id="snow-yes">

    <input cf-label="&#x1F44E" type="radio" name="snow" value="-1" id="snow-no">

    <input cf-label="&#x1F610" type="radio" name="snow" value="0" id="snow-dontcare">


  </fieldset>


  <fieldset cf-questions="Do you like windy days?">

    <input cf-label="&#x1F44D" type="radio" name="wind" value="1" id="wind-yes">

    <input cf-label="&#x1F44E" type="radio" name="wind" value="-1" id="wind-no">

    <input cf-label="&#x1F610" type="radio" name="wind" value="0" id="wind-dontcare">

  </fieldset>

    <input type="submit">

</form>
